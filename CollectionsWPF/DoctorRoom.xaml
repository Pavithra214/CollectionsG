<Window x:Class="CollectionsWPF.Doctor_Room"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollectionsWPF"
        mc:Ignorable="d"
        Title="Doctor_Room" Height="250" Width="350">
    <StackPanel HorizontalAlignment="Center" Background="Blue" Height="250" Width="350">
        <Label Content="Room No:21" FontSize="20" Foreground="White" HorizontalAlignment="Center"></Label>
        <Label Content="Doctor Name: Anjana" Foreground="White" HorizontalAlignment="Center"></Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Token no: " FontSize="20" FontWeight="Bold" Foreground="Red"></Label>
            <Label x:Name="lbltokenno" FontSize="20"  FontWeight="Bold" Foreground="Red"></Label>
        </StackPanel>
        <Label x:Name="lblpatientname" FontSize="20" Foreground="White" HorizontalAlignment="Center"></Label>
        <Button Content="Next Patient" x:Name="patientbtn" Click="patientbtn_Click" Background="White"></Button>
    </StackPanel>
</Window>
